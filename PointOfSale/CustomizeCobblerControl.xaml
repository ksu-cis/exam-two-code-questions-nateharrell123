<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock>Customize Cobbler</TextBlock>
            <CheckBox IsChecked="{Binding Path=WithIceCream}" Content="Ice Cream?"/>
            <TextBlock>Fruit Filling</TextBlock>
            <RadioButton x:Name="Peach" Content="Peach"/>
            <RadioButton x:Name="Cherry" Content="Cherry"/>
            <RadioButton x:Name="Blueberry" Content="Blueberry"/>
        </StackPanel>
    </Grid>
</UserControl>
